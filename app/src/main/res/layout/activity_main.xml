<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TableRow
            android:background="#d9dde2"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/zerozero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/zeroone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/zerotwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow
            android:background="#5FAFE6"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/onezero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/oneone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/onetwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow
            android:background="#D757E4"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/twozero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/twoone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/twotwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

    <TableRow>
        <TextView
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="56sp"
            android:textAlignment="center"
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>

    </TableLayout>
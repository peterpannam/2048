<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



        <TableRow
            android:background="#d9dde2"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="top"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/zerozero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/zeroone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/zerotwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </TableRow>

        <TableRow
            android:background="#5FAFE6"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/onezero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/oneone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="middle"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/onetwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </TableRow>

        <TableRow
            android:background="#D757E4"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/twozero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/twoone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="null"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="56sp"
                android:textAlignment="center"
                android:id="@+id/twotwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </TableRow>
    <TableRow
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/left"
            style="@style/Widget.AppCompat.Button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="moveLeft"
            android:text="left"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />

        <Button
            android:id="@+id/up"
            style="@style/Widget.AppCompat.Button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="moveUp"
            android:text="up"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />

        <Button
            android:id="@+id/down"
            style="@style/Widget.AppCompat.Button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="moveDown"
            android:text="down"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />

        <Button
            android:id="@+id/right"
            style="@style/Widget.AppCompat.Button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="moveRight"
            android:text="right"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />
    </TableRow>



    </TableLayout>